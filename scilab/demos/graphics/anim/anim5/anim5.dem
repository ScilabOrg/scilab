mode(0);

// Hide the toolbar
toolbar(0,'off');

// Save the graphic context
kp = xget('pixmap');
curFont=xget('font');

string_to_display = [
	'xset(''pixmap'',1);';
	'xselect();';
	't=-%pi:0.3:%pi;';
	'plot3d(t,t,sin(t)''*cos(t),35,45,''X@Y@Z'',[2,2,4]);';
	'I=20:-1:1;';
	'realtimeinit(0.1)';
	'for i=1:size(I,''*'')';
	'  realtime(i)';
	'  xset(''wwpc'');';
  'xset(""font"",curFont(1),3);';
  'xtitle(""evolution of a 3d surface"");';  
	'  plot3d1(t,t,sin((I(i)/10)*t)''*cos((I(i)/10)*t),35,45,'' '',[2,0,0])';
	'  xset(''wshow'');';
	'end'];

x_message(string_to_display);
execstr(string_to_display);

xset("pixmap",0);

// Restore the graphic context
xset('pixmap',kp);
xset("font",curFont(1),curFont(2));

mode(-1);
