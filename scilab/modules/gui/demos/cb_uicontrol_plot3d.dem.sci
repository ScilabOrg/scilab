    "position"           , [ my_cmap_frame_pos_x+10 my_cmap_frame_pos_y+my_cmap_frame_h-70 my_cmap_frame_w-25 15],...
    "horizontalalignment", "left",...
    "fontname"           , defaultfont,...
    "fontunits"          , "points",...
    "fontsize"           , text_font_size,...
