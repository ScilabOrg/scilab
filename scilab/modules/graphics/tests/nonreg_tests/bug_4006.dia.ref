// <-- Short Description -->
// xlfont does not give fonts the right index.
// 
fonts = xlfont();
selected_font = fonts(1);
size_fonts = size(fonts,'*');
if size_fonts <> 11 then bugmes();quit;end
r = xlfont(selected_font,0);
if r <> 0 then bugmes();quit;end
fonts = xlfont();
size_fonts = size(fonts,'*');
if size_fonts <> 11 then bugmes();quit;end
r = xlfont(selected_font,20);
if r <> 20 then bugmes();quit;end
fonts = xlfont();
size_fonts = size(fonts,'*');
if size_fonts <> 21 then bugmes();quit;end
if fonts(21) <> selected_font then bugmes();quit;end
