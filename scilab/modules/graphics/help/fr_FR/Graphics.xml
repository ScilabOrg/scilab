    <refsection>
        <title>Fonctions graphiques en automatique</title>
        <variablelist>
            <varlistentry>
                <term>
                    <link linkend="bode">bode</link>
                </term>
                <listitem>
                    <para>diagramme de Bode</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image>s=poly(0,'s')
                            h=syslin('c',(s^2+2*0.9*10*s+100)/(s^2+2*0.3*10.1*s+102.01))
                            clf();bode(h,0.01,100);
                        </scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="gainplot">gainplot</link>
                </term>
                <listitem>
                    <para>diagramme de gain</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image>s=poly(0,'s')
                            h1=syslin('c',(s^2+2*0.9*10*s+100)/(s^2+2*0.3*10.1*s+102.01))
                            h2=syslin('c',(s^2+2*0.1*15.1*s+228.01)/(s^2+2*0.9*15*s+225))
                            clf();gainplot([h1;h2],0.01,100,['h1';'h2'])
                            title('Gainplot');
                        </scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="nyquist">nyquist</link>
                </term>
                <listitem>
                    <para>diagramme de Nyquist</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image>s=poly(0,'s')
                            h=syslin('c',(s^2+2*0.9*10*s+100)/(s^2+2*0.3*10.1*s+102.01));
                            h1=h*syslin('c',(s^2+2*0.1*15.1*s+228.01)/(s^2+2*0.9*15*s+225))
                            nyquist(h1)
                            ax=gca();
                            h_h=ax.children($).children(2);
                            tip=datatipCreate(h_h,[1.331,0.684]);
                            datatipSetOrientation(tip,"upper left");
                        </scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="m_circle">m_circle</link>
                </term>
                <listitem>
                    <para>diagramme M-circle</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image>m_circle();</scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="hallchart">hallchart</link>
                </term>
                <listitem>
                    <para>
                        Hall chart
                    </para>
                    <para>
                        <emphasis role="bold">Example:</emphasis>
                    </para>
                    <para>
                        <scilab:image localized="true">hallchart();</scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="nicholschart">nicholschart</link>
                </term>
                <listitem>
                    <para>abaque de Nichols</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image localized="true">nicholschart();</scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="black">black</link>
                </term>
                <listitem>
                    <para>diagramme de Black</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
                        <scilab:image localized="true">s=poly(0,'s');
                            sl=syslin('c',5*(1+s)/(.1*s^4+s^3+15*s^2+3*s+1))
                            clf();black(sl,0.01,10);
                        </scilab:image>
                    </para>
                </listitem>
            </varlistentry>
            <varlistentry>
                <term>
                    <link linkend="evans">evans</link>
                </term>
                <listitem>
                    <para>lieu des racines d'Evans</para>
                    <para>
                        <emphasis role="bold">Exemple:</emphasis>
                    </para>
                    <para>
