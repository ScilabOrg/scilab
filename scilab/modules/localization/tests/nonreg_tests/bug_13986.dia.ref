// setdefaultlanguage does not set correctly in Windows registry
old = getlanguage();
lang = [ ...
    "zh_TW" ...
    "zh_CN" ...
    "uk_UA" ...
    "ru_RU" ...
    "pt_BR" ...
    "pl_PL" ...
    "ja_JP" ...
    "it_IT" ...
    "fr_FR" ...
    "es_ES" ...
    "en_US" ...
    "de_DE" ...
    "cs_CZ" ...
    "ca_ES"];
for l = lang
    setdefaultlanguage(l);
    val = winqueryreg("HKEY_CURRENT_USER", "SOFTWARE\Scilab\" + getversion() + "\Settings", "LANGUAGE");
    assert_checkequal(val, l);
end
