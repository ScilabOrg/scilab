        <title>Смотрите также</title>
        <simplelist type="inline">
            <member>
                <link linkend="number_properties">number_properties</link>
            </member>
            <member>
                <link linkend="frexp">frexp</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
