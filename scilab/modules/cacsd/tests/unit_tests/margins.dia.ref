//gain margin
//-----------
function ok=check_gmargin(h,fref,gref)
  eps=1e-10
  [g,f]=g_margin(h)
  if fref==0 then
     ok=abs(f - fref)<eps
  else
    ok=abs(f - fref)/abs(fref)<eps
  end
  if gref==0 then
     ok=ok&abs(g - gref)<eps
  else
    ok=ok&abs(g - gref)/abs(gref)<eps
  end
endfunction
