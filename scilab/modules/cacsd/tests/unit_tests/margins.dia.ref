//phase margin
//-----------
function ok=check_pmargin(h,f_ref,p_ref)
  eps=1e-9
  [p,f]=p_margin(h)
  if f_ref==0 then
     ok=abs(f - f_ref)<eps
  else
    ok=abs(f - f_ref)/abs(f_ref)<eps
  end
  if p_ref==0 then
     ok=ok&abs(p - p_ref)<eps
  else
    ok=ok&abs(p - p_ref)/abs(p_ref)<eps
  end
endfunction
