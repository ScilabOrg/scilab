        <title>See Also</title>
        <simplelist type="inline">
            <member>
                <link linkend="genmarkov">genmarkov</link>
            </member>
            <member>
                <link linkend="classmarkov">classmarkov</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
