  <refnamediv>
    <refname>erf</refname>

    <refpurpose>fonction erreur</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Séquence d'appel</title>

    <synopsis>y = erf(x)</synopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Paramètres</title>

    <variablelist>
      <varlistentry>
        <term>x</term>

        <listitem>
          <para>vecteur réel</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>y</term>

        <listitem>
          <para>vecteur réel (de même taille que x)</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>

  <refsection>
    <title>Description</title>

    <para><literal>erf</literal> calcule la fonction erreur:</para>

    <informalequation>
      <mediaobject>
        <imageobject>
          <imagedata fileref="../mml/erf_equation1.mml" />
        </imageobject>
      </mediaobject>
    </informalequation>
  </refsection>

  <refsection>
    <title>Exemples</title>

    <programlisting role="example">
deff('y=f(t)','y=exp(-t^2)');
erf(0.5)-2/sqrt(%pi)*intg(0,0.5,f)
 </programlisting>
  </refsection>

