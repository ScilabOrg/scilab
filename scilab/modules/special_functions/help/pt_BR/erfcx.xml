        <title>Ver Também</title>
        <simplelist type="inline">
            <member>
                <link linkend="erf">erf</link>
            </member>
            <member>
                <link linkend="erfc">erfc</link>
            </member>
            <member>
                <link linkend="calerf">calerf</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
