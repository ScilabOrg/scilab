    <refsection>
        
        <title>例</title>
        
    </refsection>
    
    <refsection>
        
        <programlisting role="example">//表示
            
            var = tlist('tab', ['a', 'b'], ['x'; 'y'], rand(2, 2)) // varの型は 'tab'です
            
            
            
            typeof(var)
            
            
            
            function [] = %tab_p(l)
            
            disp([[' '; l(3)] [l(2); string(l(4))]])
            
            endfunction
            
            
            
            var // オーバーローディング後
            
        </programlisting>
        
    </refsection>
    
    <refsection>
        
        <programlisting role="example">//演算子
            
            's' + 1 // 数値は文字列に加算できません
            
            
            
            function x = %c_a_s(a, b)
            
            x = a + string(b);
            
            endfunction
            
            
            
            's' + 1 // オーバーローディング後
            
        </programlisting>
        
    </refsection>
    
    <refsection>
        
        <programlisting role="example">//関数
            
            sin('2 * x') // sin関数は文字列では動作しません
            
            
            
            function x = %c_sin(a)
            
            x = 'sin(' + a + ')'
            
            endfunction
            
            
            
            sin('2 * x') // オーバーローディング後
            
        </programlisting>
        
    </refsection>
    
