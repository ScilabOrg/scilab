        <title>Voir aussi</title>
        <simplelist type="inline">
            <member>
                <link linkend="gcd">gcd</link>
            </member>
            <member>
                <link linkend="htrianr">htrianr</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
