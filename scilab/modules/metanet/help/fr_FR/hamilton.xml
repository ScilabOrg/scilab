g=make_graph('foo',1,20,ta,he);
g.nodes.graphics.x=[-30,-182,161,64,-116,-25,-79,-128,-97,-94,-19,47,66,98,24,-61,13,-64,32,-16];
g.nodes.graphics.y=[198,94,90,-107,-96,144,103,78,13,-63,-48,-76,23,77,103,76,78,11,13,-15];
show_graph(g,'new');
cir=hamilton(g)
hilite_edges(cir);

 
  ]]></programlisting>
  </refsection>
